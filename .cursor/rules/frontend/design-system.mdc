.btn-secondary {
  background: var(--bg-surface);
  color: var(--text-secondary);
  border: 2px solid var(--border);
  border-radius: 12px;
  padding: 10px 22px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  min-height: 44px;
  
  &:hover {
    border-color: var(--primary);
    color: var(--primary);
